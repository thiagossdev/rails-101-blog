<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="field">
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ["public", "private"], selected: "public" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
