<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>

<%= link_to "Edit", edit_article_path(@article) %> |
<%= link_to "Destroy", article_path(@article), data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %> |
<%= link_to "Back", articles_path %>
